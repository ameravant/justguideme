<%-
pretty_body = @confirmation_message
pretty_body.gsub!('href="/', "href=\"#{$DOMAIN_PATH}")
pretty_body.gsub!('src="/', "src=\"#{$DOMAIN_PATH}")
-%>
<div>
  <%= "Hi %s" % @profile.person.name %>,
  <%= pretty_body %>
</div>
  ______________________________________________

<div>
  <p>Email: <%= h @profile.person.email %></p>
  <%- unless @profile.person.phone.blank? -%>
   <p>Phone: <%= h @profile.person.phone %></p>
  <%- end -%>
</div>